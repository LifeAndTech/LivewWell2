<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/livewellmain"
    android:padding="@dimen/activity_margin"
    tools:context=".MainActivity" >

    <Button
    	android:id="@+id/btn_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:textColor="@drawable/color_selector"
		android:textSize="20sp"
        android:text="@string/calories" 
        android:layout_marginLeft="15dip"
        android:layout_marginTop="150dip" />
        
   	<Button
		android:id="@+id/btn_calendar" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:textColor="@drawable/color_selector"
		android:textSize="20sp"		
		android:text="@string/calendar"
		android:layout_marginLeft="15dip"
		android:layout_below="@id/btn_calories" />
		
	<Button
		android:id="@+id/btn_inspiration" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:textColor="@drawable/color_selector"
		android:textSize="20sp"
		android:text="@string/inspiration"
		android:layout_marginLeft="15dip"
		android:layout_below="@id/btn_calendar" />
		
	<Button
		android:id="@+id/btn_paleo" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:textColor="@drawable/color_selector"
		android:textSize="20sp"
		android:text="@string/paleo"
		android:layout_marginLeft="15dip"
		android:layout_below="@id/btn_inspiration"/>

</RelativeLayout>
